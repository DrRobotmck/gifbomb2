<script type="text/html" id="new_user_template">
<h3>'Sign Up for an account...you know you want to.'</h3>
<div class="small-6 small-offset-3 columns">
<form id="new_user_form">
	<input name= "email" type="text" id="email" placeholder="Give us your email address..."/>
	<input name="password" type="password" id="password" placeholder="choose a super secure password..."/>
	<input name="password_confirmation" type="password" id="password" placeholder="password again, NSA wants a copy"/>
	<button id="submit">Submit</button>
</form>
</div>
</script>
<script type="text/html" id="sign_in_template">
	<div class="small-6 small-offset-3 columns">
	<form id="signin_form">
		<input name= "email" type="text" id="signin-email" placeholder="Give us your email address..."/>
		<input name="password" type="password" id="signin-password" placeholder="choose a super secure password..."/>
		<button id="submit">Submit</button>
</form>
</div>
</script>



